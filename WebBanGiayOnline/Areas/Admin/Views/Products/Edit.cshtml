@model WebBanGiayOnline.Areas.Admin.ViewModels.ProductViewModel

@{
    ViewBag.Title = "Cập nhật sản phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@section naviheader{
    <!-- Left navbar links -->
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin" class="nav-link">Trang chủ</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/products" class="nav-link">Sản phẩm</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="#" class="nav-link">Cập nhật</a>
        </li>
    </ul>
}
<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Cập nhật sản phẩm</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Sản phẩm</a></li>
                    <li class="breadcrumb-item active">Cập nhật</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Cập nhât sản phẩm</h3>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-12">
                    @using (Html.BeginForm("Edit", "Products", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true)
                        @Html.HiddenFor(model => model.Product.ProductId)
                        @Html.HiddenFor(model => model.Product.ProductCategoryId)
                        @Html.HiddenFor(model => model.Product.ProductGenderId)
                        <div class="card">
                            <div class="card-header p-2">
                                <ul class="nav nav-pills">
                                    <li class="nav-item"><a class="nav-link active" href="#profile" data-toggle="tab">Thông tin sản phẩm</a></li>
                                    @*<li class="nav-item"><a class="nav-link" href="#image" data-toggle="tab">Hình ảnh</a></li>*@
                                    <li class="nav-item"><a class="nav-link" href="#detail" data-toggle="tab">Chi tiết</a></li>
                                    @*<li class="nav-item"><a class="nav-link" href="#seo" data-toggle="tab">Seo</a></li>*@
                                </ul>
                            </div><!-- /.card-header -->
                            <div class="card-body">
                                <div class="tab-content">
                                    <div class="active tab-pane" id="profile">
                                        <div class="form-group">
                                            <label for="exampleInputEmail1">Tên sản phẩm</label>
                                            @Html.TextBoxFor(model => model.Product.ProductName, new { @class = "form-control", @placeholder = "Tên sản phẩm" })
                                            @Html.ValidationMessageFor(model => model.Product.ProductName, null, new { @class = "text-danger" })
                                        </div>
                                        <div class="form-group">
                                            <label for="exampleInputEmail1">Mã sản phẩm</label>
                                            @Html.TextBoxFor(model => model.Product.ProductCode, new { @class = "form-control", @placeholder = "Mã sản phẩm" })
                                            @Html.ValidationMessageFor(model => model.Product.ProductCode, null, new { @class = "text-danger" })
                                        </div>
                                        <div class="form-group">
                                            <label for="exampleInputEmail1">Danh mục sản phẩm</label>
                                            @Html.DropDownListFor(model => model.Product.ProductCategoryId, (IEnumerable<SelectListItem>)ViewBag.ProductCategory, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(model => model.Product.ProductCategoryId, null, new { @class = "text-danger" })
                                        </div>
                                        <div class="form-group">
                                            <label for="exampleInputEmail1">Đối tượng</label>
                                            @Html.DropDownListFor(model => model.Product.ProductGenderId, (IEnumerable<SelectListItem>)ViewBag.ProductGender, new { @class = "form-control" })
                                        </div>
                                        <div class="form-group">
                                            <label for="exampleInputEmail1">Mô tả</label>
                                            @Html.TextBoxFor(model => model.Product.Description, new { @class = "form-control", @placeholder = "Mô tả" })
                                            @Html.ValidationMessageFor(model => model.Product.Description, null, new { @class = "text-danger" })
                                        </div>
                                        <div class="form-group">
                                            <label for="exampleInputEmail1">Chi tiết</label>
                                            @Html.TextBoxFor(model => model.Product.Detail, new { @class = "form-control", @placeholder = "Chi tiết sản phẩm" })
                                            @Html.ValidationMessageFor(model => model.Product.Description, null, new { @class = "text-danger" })
                                        </div>
                                        <div class="row">
                                            <div class="col-4">
                                                <div class="form-group">
                                                    <label for="exampleInputEmail1">Số lượng</label>
                                                    @Html.TextBoxFor(model => model.Product.Quantity, new { @class = "form-control" })
                                                    @Html.ValidationMessageFor(model => model.Product.Quantity, null, new { @class = "text-danger" })
                                                </div>
                                            </div>
                                            <div class="col-4">
                                                <div class="form-group">
                                                    <label for="demoPrice">Giá</label>

                                                    @Html.TextBoxFor(model => model.Product.Price, new { @class = "form-control", @placeholder = "Giá" })
                                                    @Html.ValidationMessageFor(model => model.Product.Price, null, new { @class = "text-danger" })
                                                </div>
                                            </div>
                                            <div class="col-4">
                                                <div class="form-group">
                                                    <label for="demoPriceSale">Giá khuyến mãi</label>

                                                    @Html.TextBoxFor(model => model.Product.PriceSale, new { @class = "form-control", @placeholder = "Khuyến mãi" })
                                                    @Html.ValidationMessageFor(model => model.Product.PriceSale, null, new { @class = "text-danger" })
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-3">
                                                <div class="form-group">
                                                    <div class="custom-control custom-checkbox">
                                                        @Html.CheckBoxFor(model => model.Product.IsActive, new { @class = "custom-control-input", @id = "customCheckbox2", @checked = "checked" })
                                                        <label for="customCheckbox2" class=" custom-control-label">Hiển thị</label>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-3">
                                                <div class="form-group">
                                                    <div class="custom-control custom-checkbox">
                                                        @Html.CheckBoxFor(model => model.Product.IsHot, new { @class = "custom-control-input", @id = "IsHotCheckbox2" })
                                                        <label for="IsHotCheckbox2" class=" custom-control-label">Hot</label>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-3">
                                                <div class="form-group">
                                                    <div class="custom-control custom-checkbox">
                                                        @Html.CheckBoxFor(model => model.Product.IsFeature, new { @class = "custom-control-input", @id = "IsFeautureCheckbox" })
                                                        <label for="IsFeautureCheckbox" class=" custom-control-label">Nổi bật</label>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-3">
                                                <div class="form-group">
                                                    <div class="custom-control custom-checkbox">
                                                        @Html.CheckBoxFor(model => model.Product.IsSale, new { @class = "custom-control-input", @id = "IsSaleCheckbox" })
                                                        <label for="IsSaleCheckbox" class=" custom-control-label">Khuyến mãi</label>
                                                    </div>
                                                </div>
                                            </div>

                                        </div>
                                    </div>
                                    <!-- /. Thông tin sản phẩm -->
                                    <!-- /. Ảnh sản phẩm -->
                                    <div class="tab-pane" id="detail">
                                        <div class="form-group">
                                            <div class="col-md-10">
                                                <table class="table" id="ProductDetailId">
                                                    <thead>
                                                        <tr>
                                                            <th>Màu</th>
                                                            <th>Kích cỡ</th>
                                                            <th>Số lượng</th>
                                                            <th></th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        @if (Model.ProductDetails != null && Model.ProductDetails.Count > 0)
                                                        {
                                                            for (int i = 0; i < Model.ProductDetails.Count; i++)
                                                            {
                                                                <tr>
                                                                    <td>@Html.DropDownListFor(x => x.ProductDetails[i].ColorCode, (SelectList)ViewBag.Colors, new { @class = "form-control" })</td>
                                                                    <td>@Html.DropDownListFor(x => x.ProductDetails[i].SizeId, (SelectList)ViewBag.Sizes, new { @class = "form-control" })</td>
                                                                    <td>@Html.TextBoxFor(x => x.ProductDetails[i].Stock, new { @class = "form-control" })</td>
                                                                    <td><button type="button" class="btn btn-danger" onclick="removeDetail(this)">Xóa</button></td>
                                                                </tr>
                                                            }
                                                        }
                                                    </tbody>
                                                </table>
                                                <button type="button" class="btn btn-success" onclick="addDetail()">Thêm</button>
                                            </div>
                                        </div>

                                    </div>
                                    <!-- /. Chi tiết số lượng -->


                                </div>
                                <!-- /.tab-content -->
                            </div><!-- /.card-body -->
                            <div class="form-group">
                                <button type="submit" class="btn btn-success">Cập nhật</button>
                                <a href="/admin/products" class="btn btn-danger">Quay lại</a>
                            </div>
                        </div> <!-- /.card -->
                    }

                </div>
            </div>

        </div>
        <!-- /.card-body -->
        <div class="card-footer">

        </div>
        <!-- /.card-footer-->
    </div>
    <!-- /.card -->

</section>
<!-- /.content -->
@section scripts{
    @Scripts.Render("~/bundles/jqueryal")
    <script type="text/javascript">
        $(document).ready(function () {
            CKEDITOR.replace('txtDetail', {
                customConfig: '/content/ckeditor/config.js',
                extraAllowedContent: 'span',
            });
            $('.auto').autoNumeric('int');
            $('#demoPrice').bind('blur focusout keypress keyup', function () {
                var demoGet = $('#demoPrice').autoNumeric('get');
                $('#Product_Price').val(demoGet);
                $('#Product_Price').autoNumeric('set', demoGet);
            });
            $('#demoPriceSale').bind('blur focusout keypress keyup', function () {
                var demoGet = $('#demoPriceSale').autoNumeric('get');
                $('#Product_PriceSale').val(demoGet);
                $('#Product_PriceSale').autoNumeric('set', demoGet);
            });
        });
        function BrowseServer(field) {
            var finder = new CKFinder();
            finder.selectActionFunction = function (fileUrl) {
                addImageProduct(fileUrl);
            };
            finder.popup();
        }       
        function addDetail() {
                var row = `<tr>
                                <td>@Html.Raw(Html.DropDownList("ProductDetails[INDEX].ColorCode", (SelectList)ViewBag.Colors, "- Chọn màu -", new { @class = "form-control" }))</td>
                                <td>@Html.Raw(Html.DropDownList("ProductDetails[INDEX].SizeId", (SelectList)ViewBag.Sizes, "- Chọn Size -", new { @class = "form-control" }))</td>
                                <td><input class="form-control" name="ProductDetails[INDEX].Stock" type="text" value="0" /></td>
                                <td><button type="button" class="btn btn-danger" onclick="removeDetail(this)">Xóa</button></td>
                            </tr>`;
                var table = $('#ProductDetailId tbody');
                var index = table.find('tr').length;
                table.append(row.replace(/INDEX/g, index));
            }

            function removeDetail(button) {
                $(button).closest('tr').remove();
            }

    </script>
}


