@model IEnumerable<WebBanGiayOnline.Models.EF.Product>
@if (Model != null && Model.Any())
{
    foreach (var item in Model)
    {
        var strImage = "";
        var img = item.ProductDetailImages.FirstOrDefault(x => x.IsDefault);
        if (img != null)
        {
            strImage = img.Image;
        }
        <div class="product-item @item.ProductGender.Alias">
            <div class="product discount product_filter">
                <div class="product_image">
                    <img src="@strImage" alt="@item.ProductName">
                </div>
                <div class="favorite favorite_left"></div>
                <div class="product_bubble product_bubble_right product_bubble_red d-flex flex-column align-items-center"><span>Sale</span></div>
                <div class="product_info">
                    <h6 class="product_name"><a href="/chi-tiet/@item.Alias-p@(item.ProductId)">@item.ProductName</a></h6>
                    @if (item.PriceSale > 0)
                    {
                        <div class="product_price">@WebBanGiayOnline.Common.Common.Common.FormatNumber(item.PriceSale, 0)<span>@WebBanGiayOnline.Common.Common.Common.FormatNumber(item.Price, 0)</span></div>
                    }
                    else
                    {
                    <div class="product_price">@WebBanGiayOnline.Common.Common.Common.FormatNumber(item.Price, 0)</div>
                    }
                </div>
            </div>
            <div class="red_button add_to_cart_button"><a href="#" class="btnAddToCart" data-id="@item.ProductId">Thêm vào giỏ hàng</a></div>
        </div>
    }
}
